{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "extends": ["prettier"],
  "rules": {
    "class-methods-use-this": 0,
    "comma-dangle": 0,
    "no-param-reassign": 0,
    "no-use-before-define": 0,
    "padded-blocks": 0,
    "quote-props": 0,
    "semi": ["error", "never"],
    "template-curly-spacing": [2, "always"],
    "import/prefer-default-export": 0,
    "import/first": 0,
    "import/no-extraneous-dependencies": 0,
    "jsx-quotes": ["error", "prefer-single"],
    "arrow-parens": ["error", "always"],
    "no-var": "error",
    "max-len": [
      1,
      {
        "code": 120
      }
    ],
    "no-underscore-dangle": "off"
  }
}
